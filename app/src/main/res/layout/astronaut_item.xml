<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/AstroCard"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Toolbar
        android:id="@+id/tb_topbar_2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#122FAA"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="#122FAA"
        android:elevation="5dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/tb_topbar_2"
        app:layout_constraintStart_toStartOf="@id/tb_topbar_2"
        app:layout_constraintTop_toTopOf="@id/tb_topbar_2" />
    <ImageView
        android:layout_width="107dp"
        android:layout_height="63dp"
        android:elevation="5dp"
        android:src="@drawable/space"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="2dp" />
    <ImageView
        android:id="@+id/imgV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/image"
    app:layout_constraintTop_toBottomOf="@id/tb_topbar_2"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="408dp"
        android:layout_height="46dp"
        android:background="@drawable/backarrow"
        android:text="Имя Фамилия"
        android:textColor="#B0B7C6"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/imgV"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/txt_5"
        android:layout_width="189dp"
        android:layout_height="43dp"
        android:text="Родился в "
        android:textColor="#122FAA"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/date"
        android:layout_width="225dp"
        android:layout_height="38dp"
        android:background="@drawable/backarrow"
        android:text="Дата"
        android:textColor="#B0B7C6"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/txt_5"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/txt_7"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:text="В "
        android:textColor="#122FAA"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/txt_5" />

    <TextView
        android:id="@+id/country"
        android:layout_width="413dp"
        android:layout_height="45dp"
        android:background="@drawable/backarrow"
        android:text="Страна"
        android:textColor="#B0B7C6"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/txt_7"
        app:layout_constraintTop_toBottomOf="@id/date"
        tools:layout_editor_absoluteX="-2dp" />

    <TextView
        android:id="@+id/txt_9"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Цель: "
        android:textColor="#122FAA"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/country"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/duration"
        android:layout_width="409dp"
        android:layout_height="45dp"
        android:background="@drawable/backarrow"
        android:text="Цель"
        android:textColor="#B0B7C6"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/txt_9"

        tools:layout_editor_absoluteX="2dp" />

    <TextView
        android:id="@+id/txt_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Космический аппарат "
        android:textSize="32sp"
        android:textColor="#122FAA"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/duration"/>

    <TextView
        android:id="@+id/spacecraft"
        android:layout_width="414dp"
        android:layout_height="50dp"
        android:background="@drawable/backarrow"
        android:text="Космический аппарат:"
        android:textColor="#B0B7C6"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/txt_11"
        tools:layout_editor_absoluteX="-3dp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:menu="@menu/menu_main"
        />
</androidx.constraintlayout.widget.ConstraintLayout>